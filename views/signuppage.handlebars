    <div class="container-2">
        <form class="form" id="createAccount">
            <h1 class="form__title">Create Account</h1>
            <button data-avatar="0" type="button"><img src="../public/images/avatar.jpg" alt="avatar0" border="50%"/></button>
            <button data-avatar="1" type="button"><img src="../public/images/avatar1.png" alt="avatar1" border="50%"/></button>
            <button data-avatar="2" type="button"><img src="../public/images/avatar2.png" alt="avatar2" border="50%"/></button>
            <button data-avatar="3" type="button"><img src="../public/images/avatar3.png" alt="avatar3" border="50%"/></button>
            <button data-avatar="4" type="button"><img src="../public/images/avatar4.png" alt="avatar4" border="50%"/></button>
            <button data-avatar="5" type="button"><img src="../public/images/avatar5.png" alt="avatar5" border="50%"/></button>
            <button data-avatar="6" type="button"><img src="../public/images/avatar6.png" alt="avatar6" border="50%"/></button>
            {{!-- <div> TO DO Choose Avatar </div> --}}
            <div class="form__message form__message--error"></div>
            <div class="form__input-group">
                <input type="text" id="signupUsername" class="form__input" placeholder="Username">
                <div class="form__input-error-message"></div>
            </div>
            <div class="form__input-group">
                <input type="text" class="form__input" placeholder="Email Address">
                <div class="form__input-error-message"></div>
            </div>
            <div class="form__input-group">
                <input type="password" class="form__input" placeholder="Password">
                <div class="form__input-error-message"></div>
            </div>
            <div class="form__input-group">
                <input type="password" class="form__input"  placeholder="Confirm password">
                <div class="form__input-error-message"></div>
            </div>
            <button class="form__button" type="submit">Continue</button>
            <p class="form__text">
                <a class="form__link" href="./" id="linkLogin">Already have an account? Sign in</a>
            </p>
        </form>
    </div>
